<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
            <!-- Colors for Light Mode -->
        <item name="android:statusBarColor">@color/transparent</item>      <!-- White status bar -->
        <item name="android:navigationBarColor">@color/transparent</item> <!-- White nav bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- Makes status bar icons dark -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item> <!-- Makes nav bar icons dark -->
        <!-- Customize your theme here. -->
    </style>
</resources>
